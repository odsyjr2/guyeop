#include<stdio.h>
#include<stdlib.h>
#include<time.h>
int* dice_prob(int*, int*);
int main()
{
	int dice[6], prob[4] = { 30,53,10,7 }, mul[4] = { 0,1,2,3 };
	printf("주사위 굴리기\n");
	for (int i = 0; i < 6; i++)
		dice[i] = dice_prob(prob, mul);
	srand(time(NULL));
	int a = rand() % 6;
	printf("%d배\n", dice[a]);
	return 0;
}
int* dice_prob(int* a, int* b)
{
	srand(time(NULL));
	int prob = rand() % 100;
	if (0 <= prob && prob < a[0])
		return b[0];
	if (a[0] <= prob && prob < a[1])
		return b[1];
	if (a[1] <= prob && prob < a[2])
		return b[2];
	if (a[2] <= prob && prob < a[3])
		return b[3];
}
